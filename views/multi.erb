<form method="post">
  Now select an option!
  <select name="option">
    <option value="Rock">Rock</option>
    <option value="Paper">Paper</option>
    <option value="Scissors">Scissors</option>
  </select>
  <input value="Throw!" type="submit">
</form>

<% if params[:option] != nil %>
  You threw <%= params[:option] %>!
  Your opponent threw <%= %>!
<% end %>

<% case %>
<% when @result == 'player 1' %>
  player 1 wins!
<% when @result == 'draw' %>
  Draw!
<% when @result == 'player 2' %>
  player 2 wins!
<% end %>

